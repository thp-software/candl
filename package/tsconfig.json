{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Bundler"
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
